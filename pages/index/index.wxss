/**index.wxss**/
/* 莫兰迪配色 */
page {
  height: 100vh;
  background-color: #E8E4E9;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}

/* 用户登录区域 - 右上角 */
.user-area {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  z-index: 10;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-nickname {
  font-size: 28rpx;
  color: #8D8D8D;
}

.login-btn {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  line-height: 2;
  background-color: #C9B6B8;
  color: #fff;
  border: none;
  border-radius: 20rpx;
}

.login-btn::after {
  border: none;
}

/* 序列输入区域 - 页面中心 */
.input-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 标题区域 */
.input-title {
  width: 80vw;
  margin-bottom: 20rpx;
  text-align: center;
}

.title-cn {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #8D8D8D;
  margin-bottom: 8rpx;
}

.title-en {
  display: block;
  font-size: 24rpx;
  color: #A8B8C8;
}

/* 序列列表容器 */
.sequence-list {
  width: 80vw;
  max-height: 60vh;
  overflow-y: auto;
}

/* 单个序列输入框项 */
.sequence-item {
  margin-bottom: 30rpx;
}

/* 序列头部 */
.sequence-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding: 0 10rpx;
}

/* 序列标签 */
.sequence-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #8D8D8D;
}

/* 删除按钮 */
.sequence-delete {
  font-size: 24rpx;
  color: #E88B8B;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  background-color: #F5E5E5;
}

.sequence-input {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 1.6;
  box-shadow: 0 8rpx 24rpx rgba(141, 141, 141, 0.15);
  margin-bottom: 10rpx;
  box-sizing: border-box;
  transition: height 0.3s ease;
}

/* 普通状态（未聚焦）- 缩小 */
.sequence-input.normal {
  height: 100rpx;
}

/* 聚焦状态 - 放大 */
.sequence-input.focused {
  height: 500rpx;
}

/* 计数器区域 */
.input-counter {
  width: 100%;
  text-align: center;
}

.counter-cn {
  display: block;
  font-size: 28rpx;
  color: #8D8D8D;
  margin-bottom: 6rpx;
}

.counter-en {
  display: block;
  font-size: 22rpx;
  color: #A8B8C8;
}

/* 添加序列按钮 */
.add-sequence-btn {
  width: 80vw;
  height: 70rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #D4C4C6;
  border-radius: 35rpx;
  box-shadow: 0 4rpx 12rpx rgba(141, 141, 141, 0.15);
}

.add-icon {
  font-size: 40rpx;
  color: #fff;
  margin-right: 10rpx;
  line-height: 1;
}

.add-text {
  font-size: 26rpx;
  color: #fff;
}

/* 提交按钮区域 */
.submit-area {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  background-color: transparent;
  border-top: none;
}

.submit-btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
  background-color: #A8B8C8;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn::after {
  border: none;
}
