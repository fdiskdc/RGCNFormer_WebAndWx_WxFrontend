/* Container - 相对大小 */
.container {
  width: 100%;
  margin: 0 auto;
  padding: 0;
  background-color: #f5f5f5;
  height: 100vh;
  overflow-y: auto;
  box-sizing: border-box;
}

/* Loading Container - 相对大小 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10% 0;
}

.loading-spinner {
  width: 10vw;
  height: 10vw;
  border: 1vw solid #e5e5e5;
  border-top-color: #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  max-width: 80px;
  max-height: 80px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 1.1em;
  color: #333;
  margin-top: 4%;
  font-weight: 500;
}

.loading-subtext {
  font-size: 0.9em;
  color: #999;
  margin-top: 2%;
}

/* Error Container - 相对大小 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10% 0;
}

.error-icon {
  font-size: 8em;
  margin-bottom: 4%;
}

.error-text {
  font-size: 1.1em;
  color: #e64340;
  margin-bottom: 5%;
  text-align: center;
}

/* Results Container - 相对大小 */
.results-container {
  background-color: #fff;
  border-radius: 2%;
  padding: 2%;
  box-shadow: 0 1vw 3vw rgba(0, 0, 0, 0.1), 0 0.5vw 1.5vw rgba(0, 0, 0, 0.06);
  width: 95%;
  margin: 0 auto;
}

/* Results Wrapper - 为底部标签栏留出空间 */
.results-wrapper {
  background-color: #fff;
  border-radius: 2%;
  padding: 2%;
  box-shadow: 0 1vw 3vw rgba(0, 0, 0, 0.1), 0 0.5vw 1.5vw rgba(0, 0, 0, 0.06);
  width: 95%;
  margin: 0 auto;
  padding-bottom: 120rpx;
}

/* 序列信息标签 */
.sequence-info {
  font-size: 0.85em;
  color: #A8B8C8;
  margin-left: 2%;
}

/* ==================== 标签页切换区域 - 莫兰迪配色 ==================== */

/* 标签栏容器 - 固定在底部 */
.tab-bar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(141, 141, 141, 0.15);
  z-index: 100;
  padding: 16rpx 0;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

/* 标签滚动区域 */
.tab-scroll {
  width: 100%;
  white-space: nowrap;
}

.tab-list {
  display: inline-flex;
  padding: 0 20rpx;
}

/* 单个标签项 */
.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  margin: 0 8rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
}

/* 未选中标签 - 莫兰迪灰 */
.tab-item {
  background-color: #F0EFF0;
}

.tab-item .tab-text {
  color: #8D8D8D;
  font-size: 28rpx;
}

/* 选中标签 - 莫兰迪蓝灰 */
.tab-item.active {
  background-color: #C9D4E0;
}

.tab-item.active .tab-text {
  color: #5A6A7A;
  font-weight: 600;
}

/* 标签指示器 */
.tab-indicator {
  position: absolute;
  bottom: 8rpx;
  width: 24rpx;
  height: 4rpx;
  background-color: #8B9DAA;
  border-radius: 2rpx;
}

/* Header - 相对大小 */
.header {
  padding-bottom: 2%;
  border-bottom: 1px solid #e5e5e5;
  margin-bottom: 2%;
}

.title {
  font-size: 1.2em;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 1%;
}

.job-id {
  font-size: 0.75em;
  color: #999;
}

/* Section - 相对大小 */
.section {
  margin-bottom: 3%;
}

.section-title {
  font-size: 1em;
  font-weight: bold;
  color: #333;
  margin-bottom: 2%;
  padding-left: 2%;
  border-left: 3px solid #07c160;
}

.section-subtitle {
  font-size: 0.85em;
  font-weight: bold;
  color: #666;
  margin: 2% 0 1.5% 0;
}

/* Classification Tree Container - 相对大小 */
.tree-container {
  position: relative;
  width: 100%;
  height: 50vh;
  background-color: #f8f8f8;
  border-radius: 1.5%;
  overflow: hidden;
}

/* Classification Tree Canvas */
.tree-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* Hierarchy Tree - 莫兰迪配色 */
.hierarchy-tree {
  background-color: #faf9f6;
  border-radius: 2%;
  padding: 3%;
  box-shadow: 0 1vw 3vw rgba(0, 0, 0, 0.08);
}

/* Nucleotide Group Container */
.nucleotide-group {
  margin-bottom: 3%;
}

/* Nucleotide Node (A, C, G, U) - 相对大小 */
.nucleotide-node {
  width: 100%;
  padding: 3% 4%;
  margin-bottom: 3%;
  box-sizing: border-box;
  background: linear-gradient(135deg, #faf9f6 0%, #f5f4f1 100%);
  border-left-color: #9aab9f;
  border-left-width: 3px;
  box-shadow: 0 0.5vw 1.5vw rgba(0, 0, 0, 0.08), 0 0.2vw 0.5vw rgba(0, 0, 0, 0.04);
}

.nucleotide-node.predicted {
  border-left-color: #7da87b;
  background: linear-gradient(135deg, #f0f3f0 0%, #e8ebe8 100%);
  box-shadow: 0 0.5vw 1.5vw rgba(143, 185, 150, 0.2);
}

.nucleotide-node .node-indicator {
  width: 1.5em;
  height: 1.5em;
}

.nucleotide-node .node-text {
  font-size: 1.1em;
  font-weight: bold;
  color: #4a4a4a;
}

/* Modifications List - Indented */
.modifications-list {
  margin-left: 5%;
  display: flex;
  flex-wrap: wrap;
  gap: 2%;
  row-gap: 3%;
  width: 95%;
  align-content: flex-start;
}

.modification-node {
  margin-bottom: 2%;
}

/* 节点基础样式 - 相对大小 */
.tree-node {
  position: relative;
  display: inline-flex;
  align-items: center;
  padding: 2% 3%;
  background-color: #fff;
  border-radius: 8px;
  border-left: 2px solid #d4d4d4;
  box-shadow: 0 0.3vw 1vw rgba(0, 0, 0, 0.08), 0 0.1vw 0.4vw rgba(0, 0, 0, 0.04);
  flex: 0 0 auto;
  max-width: 45%;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

/* 预测存在 - 莫兰迪绿色系 */
.tree-node.predicted {
  border-left-color: #8fb996;
  background: linear-gradient(135deg, #f5f7f5 0%, #edf1ed 100%);
  box-shadow: 0 0.5vw 1.5vw rgba(143, 185, 150, 0.25), 0 0.2vw 0.8vw rgba(143, 185, 150, 0.15);
}

/* 节点指示器圆点 */
.node-indicator {
  width: 0.8em;
  height: 0.8em;
  border-radius: 50%;
  background-color: #d4d4d4;
  margin-right: 0.7em;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.tree-node.predicted .node-indicator {
  background-color: #8fb996;
  box-shadow: 0 0 0.5em rgba(143, 185, 150, 0.5);
}

/* 连接线 */
.node-connector {
  position: absolute;
  left: -1.5em;
  top: 50%;
  width: 1.5em;
  height: 1px;
  background-color: #e8e8e8;
}

.tree-node.predicted .node-connector {
  background-color: #c5ddd4;
}

/* 节点文字 */
.node-text {
  font-size: 0.95em;
  color: #5a5a5a;
  flex-shrink: 0;
}

.tree-node.predicted .node-text {
  color: #4a6b52;
  font-weight: 500;
}

/* 状态标记 */
.node-status {
  margin-left: auto;
  padding-left: 0.5em;
  font-size: 0.9em;
  color: #8fb996;
  font-weight: bold;
}

.tree-node:not(.predicted) .node-status {
  color: #c0c0c0;
}

/* 根节点 */
.root-node {
  width: 100%;
  margin-bottom: 3%;
  padding: 2.5% 3.5%;
  background: linear-gradient(135deg, #faf9f6 0%, #f5f4f1 100%);
  border-left-color: #9aab9f;
}

.root-node.predicted {
  border-left-color: #7da87b;
  background: linear-gradient(135deg, #f0f3f0 0%, #e8ebe8 100%);
}

.root-node .node-indicator {
  width: 1.5em;
  height: 1.5em;
}

.root-node .node-text {
  font-size: 1.2em;
  font-weight: bold;
  color: #4a4a4a;
}

/* 核苷酸组节点 */
.group-node {
  margin-bottom: 2%;
  flex: 1;
  min-width: 80px;
}

.group-node .node-text {
  font-size: 1em;
  font-weight: 600;
}

/* Modification Node (核苷酸修饰) */
.modification-node {
  padding: 2% 3%;
  margin-left: 0;
  box-shadow: 0 0.2vw 0.8vw rgba(0, 0, 0, 0.06), 0 0.1vw 0.3vw rgba(0, 0, 0, 0.03);
}

.modification-node.predicted {
  background: linear-gradient(135deg, #f5f7f5 0%, #edf1ed 100%) !important;
  border-left-color: #8fb996 !important;
  box-shadow: 0 0.5vw 1.5vw rgba(143, 185, 150, 0.25), 0 0.2vw 0.8vw rgba(143, 185, 150, 0.15);
}

.modification-node .node-text {
  font-size: 0.9em;
}

/* 连接线 - 针对修饰节点调整 */
.modification-node .node-connector {
  display: none;
}

/* 核苷酸类型特定颜色 */
.nucleotide-node.predicted[data-nuc="A"] {
  border-left-color: #c5b5a5;
  background: linear-gradient(135deg, #faf8f6 0%, #f5f1ed 100%);
}

.nucleotide-node.predicted[data-nuc="C"] {
  border-left-color: #b5c5d4;
  background: linear-gradient(135deg, #f6f8fa 0%, #edf1f5 100%);
}

.nucleotide-node.predicted[data-nuc="G"] {
  border-left-color: #c5d4b5;
  background: linear-gradient(135deg, #f8faf6 0%, #f1f5ed 100%);
}

.nucleotide-node.predicted[data-nuc="U"] {
  border-left-color: #d4c5b5;
  background: linear-gradient(135deg, #faf6f4 0%, #f5ede8 100%);
}

/* Attention Results - 相对大小 */
.attention-controls {
  background-color: #fafafa;
  border-radius: 2%;
  padding: 3%;
  margin-bottom: 3%;
  box-shadow: 0 0.3vw 1vw rgba(0, 0, 0, 0.06);
}

.control-row {
  display: flex;
  align-items: center;
  margin-bottom: 3%;
  flex-wrap: wrap;
}

.control-row:last-child {
  margin-bottom: 0;
}

.control-label {
  font-size: 1em;
  color: #333;
  margin-right: 2%;
}

.modification-picker {
  flex: 1;
  min-width: 120px;
}

.picker-display {
  padding: 2% 3%;
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  font-size: 1em;
  color: #333;
}

.topx-input {
  width: 60px;
  padding: 1.5%;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  font-size: 1em;
  text-align: center;
}

.nav-row {
  justify-content: space-between;
  flex-wrap: wrap;
}

.nav-buttons-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3%;
  width: 100%;
  margin-top: 3%;
}

.nav-buttons {
  display: flex;
  align-items: center;
  gap: 2%;
  flex: 1;
  justify-content: center;
}

.nav-btn {
  padding: 1.5% 3%;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 0.9em;
}

.nav-btn[disabled] {
  background-color: #cccccc;
  color: #999;
}

.nav-info {
  font-size: 0.9em;
  color: #666;
  min-width: 60px;
  text-align: center;
}

.attention-viz-container {
  background-color: #fafafa;
  border-radius: 2%;
  padding: 3%;
}

.highlight-info {
  background-color: #fff7e6;
  border-left: 3px solid #fa8c16;
  padding: 2%;
  margin-bottom: 3%;
  border-radius: 8px;
}

.highlight-label {
  font-size: 0.9em;
  color: #fa8c16;
  font-weight: bold;
  margin-right: 2%;
}

.highlight-value {
  font-size: 0.9em;
  color: #333;
}

.sequence-viewport {
  width: 100%;
  overflow-x: auto;
  margin-bottom: 3%;
}

.viewport-content {
  display: flex;
  gap: 1%;
  padding: 2%;
}

.sequence-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.base-block {
  width: 8vw;
  height: 8vw;
  max-width: 35px;
  max-height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  font-size: 0.9em;
  font-weight: bold;
  color: #333;
  box-shadow: 0 0.1vw 0.4vw rgba(0, 0, 0, 0.1);
}

.sequence-block.highlighted .base-block {
  width: 12vw;
  height: 12vw;
  max-width: 50px;
  max-height: 50px;
  font-size: 1.1em;
  box-shadow: 0 0.5vw 1.5vw rgba(0, 0, 0, 0.2);
  border: 2px solid #fa8c16;
}

.annotation-label {
  font-size: 0.75em;
  color: #666;
  margin-bottom: 1%;
  text-align: center;
  white-space: nowrap;
}

.attention-stats {
  display: flex;
  justify-content: space-around;
  background-color: #f0f0f0;
  border-radius: 8px;
  padding: 2%;
  margin-bottom: 3%;
}

.sites-list {
  background-color: #fff;
  border-radius: 8px;
  padding: 2%;
}

.site-list-header {
  font-size: 1em;
  font-weight: bold;
  color: #333;
  margin-bottom: 2%;
}

.site-list-item {
  display: flex;
  align-items: center;
  padding: 2%;
  background-color: #f8f8f8;
  border-radius: 6px;
  margin-bottom: 1.5%;
  flex-wrap: wrap;
  gap: 2%;
}

.site-rank {
  font-size: 0.9em;
  font-weight: bold;
  color: #07c160;
  min-width: 30px;
}

.site-list-item .site-type {
  font-size: 0.9em;
  font-weight: bold;
  color: #333;
}

.site-position {
  font-size: 0.85em;
  color: #666;
}

.site-score {
  font-size: 0.85em;
  color: #666;
  margin-left: auto;
}

.no-data {
  text-align: center;
  padding: 5%;
  color: #999;
  font-size: 1em;
}

/* GCN Results - ECharts 可视化 */
.gcn-stats {
  display: flex;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 2%;
  margin-bottom: 2%;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 0.8em;
  color: #999;
  margin-bottom: 1%;
}

.stat-value {
  font-size: 1.1em;
  font-weight: bold;
  color: #07c160;
}

/* GCN ECharts 容器 */
.gcn-echarts-container {
  width: 100%;
  height: 50vh;
  background-color: #fafafa;
  border-radius: 8px;
  box-shadow: 0 0.3vw 1vw rgba(0, 0, 0, 0.08);
  margin-bottom: 2%;
}

.gcn-echarts {
  width: 100%;
  height: 100%;
}

/* GCN 提示 */
.gcn-hint {
  background-color: #f0f0f0;
  padding: 2% 3%;
  border-radius: 6px;
  font-size: 0.8em;
  color: #666;
  text-align: center;
}

/* Button Container - 相对大小 */
.button-container {
  margin-top: 3%;
}

.back-button {
  width: 100%;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 1.1em;
  padding: 4% 0;
}
